%h3 Home

- if user_signed_in?
  = form_tag get_key_from_form_use_cases_path, id: "generate-key-form" do
    %p * Select a collector :
    = select_tag "collector-list", options_from_collection_for_select(@collectors, "id", "name"), name: "collector_id"

    %p * Select a collector version :
    = select_tag "collector-version-list", options_from_collection_for_select(@collector_versions, "id", "version"), name: "collector_version_id"

    #download_collector
      Download collector installer :
      %span
    / #auth_token 
    /   Auth token : 
    /   %span
    %br
    %p Select a program : 
    = select_tag "program-list", options_from_collection_for_select(Program.all, "id", "name"), include_blank: true, name: "program_id"

    %br
    %p Select tags :
    = select_tag "tag-list", options_from_collection_for_select(Tag.all, "id", "name"), multiple: true, name: "tag_ids[]"

    %br
    %br
    =submit_tag "Generate key", data: { disable_with: 'Please wait...' }, class: "btn btn-primary"
    %br
    %br
    #use_case_key
      Key :
      %span
