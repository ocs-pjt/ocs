.form-signin
  %h2.form-signin-heading Please sign in
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f|
    = f.input_field :email, autofocus: true, placeholder: 'Email address', label: false, size: 20, class: 'form-control'
    = f.input_field :password, placeholder: 'Password', label: false, size: 20, class: 'form-control'
    = f.input_field :remember_me, as: :boolean, inline_label: 'Remember me', label: false if devise_mapping.rememberable?
    = f.button :submit, "Sign in", class: 'btn btn-lg btn-primary btn-block'
  = render "devise/shared/links"

.dashed.text-center
  = link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: "zocial facebook"
  = link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2), class: "zocial google"