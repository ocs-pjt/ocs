
.span5
  %h2 Sign in
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-vertical' }) do |f|
    = f.input :email, autofocus: true
    = f.input :password
    = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
    = f.button :submit, "Sign in", class: 'btn-primary'
  = render "devise/shared/links"

.span4{style: 'margin-top:15px'}
  = link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: "zocial facebook"
